    base == 4.7.*, 
    ViperVM, 
    stm == 2.4.*,
    containers ==0.5.*,
    happstack-server == 7.3.*,
    blaze-html == 0.7.*,
    blaze-markup == 0.6.*,
    transformers == 0.4.*,
    network == 2.5.*

