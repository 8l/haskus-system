    src/lib/ViperVM/Arch/X86_64/Linux/syscall.c

  cc-options: -O3

  build-depends:       
    base >= 4.7,
    containers == 0.5.*,
    list-t == 0.2.*,
    stm-containers == 0.2.*,
    stm-linkedlist == 0.1.*,
    hashable == 1.2.*,
    cereal == 0.4.*,
    safecopy == 0.8.*,
    bytestring == 0.10.*,
    system-fileio == 0.3.*,
    system-filepath == 0.4.*,
    crypto-api == 0.13.*,
    pureMD5 == 2.1.*,
    cpuid == 0.2.*,
    text == 1.2.*,
    filepath ==1.3.*,
    either == 4.3.*,
    vector == 0.10.*,
    directory == 1.2.*,
    parsec == 3.1.*,
    parsec-numbers == 0.1.*,
