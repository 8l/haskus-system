    fixed-vector == 0.7.*,
    binary == 0.7.*,
    binary-bits == 0.6,
    utf8-string == 0.3.*,
    pqueue == 1.2.*

  build-tools: 

  ghc-options: -Wall -threaded -O2

  default-language:    Haskell2010
  hs-source-dirs: src/lib

executable PlatformInfo
  main-is: PlatformInfo.hs
  ghc-options: -Wall
  default-language:    Haskell2010
  build-depends: 
    base,
    ViperVM,
    stm
  hs-source-dirs: src/apps

executable MemoryTest
  main-is: MemoryTest.hs
  hs-source-dirs: src/apps
  ghc-options: -Wall
  default-language:    Haskell2010
  build-depends: 
    base,
    ViperVM,
    stm == 2.4.*,
    containers == 0.5.*

executable TestLinuxGraphics
  main-is: TestLinuxGraphics.hs
  hs-source-dirs: src/apps
  ghc-options: -Wall
  default-language:    Haskell2010
  build-depends: 
    base,
    ViperVM,
    either == 4.3.*,
    transformers == 0.4.*

